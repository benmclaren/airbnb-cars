<p class="description">Cars</p>
<h1>The Fleet</h1>
  <div class="car-grid mt-5">
    <% @cars.each do |car|  %>
      <%= link_to car_path(car), class:'card-link' do %>
        <div class="car-card">
            <% if car.photos.attached? %>
              <%= cl_image_tag car.photos[0].key, crop: :fill %>
            <% end %>
            <div class="car-card-info d-flex justify-content-between align-items-end">
              <div>
                <h3 class="description"><%= car.manufacturer %> </h3>
                <h3><%= car.model %></h3>
                <p class="text-lighter">Â£<%= car.price %> / per day</p>
              </div>
              <p> <%= car.address %> </p>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>




