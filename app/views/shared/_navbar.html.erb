<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <p class="m-0 nav-title">DRFT.</p>
    <% end %>

    <%# <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button> %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">
        <li class="nav-item active pe-4">
          <%= link_to "Cars", cars_path, class: "button btn-brand nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", "/", class: "button btn-brand nav-link" %>
        </li>
      </ul>
    </div>

    <% if user_signed_in? %>
      <ul class="navbar-nav">
        <li class="">
          <%= link_to "Drft your car", new_car_path, class:"button btn-brand"  %>  
        </li>
        <li class="nav-item dropdown ms -3">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.avatar.attached? %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar", alt: "dropdown menu"  %>
            <% else %>
              <%= image_tag "user.png", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
        </li>
    <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
